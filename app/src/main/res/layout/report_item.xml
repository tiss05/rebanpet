<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#E0C4C4"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageAnimal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:scaleType="centerCrop"
                android:background="@drawable/border_image_report"
                android:clipToOutline="true"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:src="@mipmap/ic_photo_camera"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local : "
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/contentLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faro"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/titleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data : "
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/contentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/12/2024 11:15"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/titleAnimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição : "
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/contentAnimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animal ferido"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                </LinearLayout>
        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
